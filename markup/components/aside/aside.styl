.aside
  position absolute
  left 50%
  transform translateX(-50%)
  height 100%
  top 0
  z-index 10
.aside__block
  width 300px
  background-color colorGray
  position absolute
  height 100%
  opacity 0.5;
  display flex
  align-items center
  justify-content center
  &--left
    left 20px
  &--right
    right 20px
