.content
    flex 1 0 auto
    display flex

.content__wrapper
    flex 1 0 auto
    max-width 1024px
    width 100%
    display flex
    flex-direction column
    padding 10px
    border 1px solid colorBlue
    background-color #fff

.content__desc
    width 100%
    min-height 100px
    display flex
    align-items center
    border 1px solid colorBlue
    padding 20px
    margin-bottom 10px
    background-color bg

.content__inner
    @media (min-width 768px)
        flex 1 0 auto
        display flex
        justify-content space-between


.content__text
    width 100%
    margin-bottom 10px
    @media (min-width 768px)
        width calc(100% - 220px)
        margin-bottom 0
    //border 1px solid colorBlue

.content__visible
    height auto
    border 1px solid colorBlue
    padding 10px
    width 200px
    @media (min-width 768px)
        min-height 300px
        align-self flex-start
        div
            min-height 300px

.sticky
    position fixed
    z-index 9
    top 20px
    min-height 300px
